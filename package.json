{
  "name": "@hufs-ezport/api-client",
  "description": "Ezports API client",
  "version": "1.0.0",
  "main": "lib/dist/index.js",
  "module": "lib/src/index.js",
  "exports": {
    ".": {
      "import": "./lib/src/index.js",
      "require": "./lib/dist/index.js"
    }
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/HUFS-EZport/API-Integration"
  },
  "author": "HUFS-Ezports",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "prebuild": "rimraf lib",
    "generate:mjs": "openapi-generator-cli generate -i openapi.json -g javascript -o lib",
    "generate:cjs": "cd lib && npm install && npm run build",
    "build": "npm run generate:mjs && npm run generate:cjs"
  },
  "dependencies": {
    "axios": "^1.6.7"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.9.0",
    "rimraf": "^5.0.5"
  }
}
